{
  "expo": {
    "name": "RouteCastle",
    "slug": "routecastle-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "jsEngine": "hermes",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.avrgpapa.routecastle",
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": true,
        "UIStatusBarStyle": "light-content"
      }
      // Removed: `usesIphoneSafeArea` (not EAS-compatible)
    },
    "android": {
      "package": "com.avrgpapa.routecastle",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "softwareKeyboardLayoutMode": "pan"
      // Removed: `windowSoftInputMode` and `kotlinVersion` (must be configured elsewhere)
    },
    "plugins": [
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsDownloadToken": "sk.eyJ1IjoiYXZyZ3BhcGEiLCJhIjoiY21jdjkwMzY3MDg4ejJscTJlNnRzazd3dSJ9.z8sPRgeeEz4gfVJyWIQHfA",
          "RNMapboxMapsUseV11": true,
          "RNMapboxMapsEnableKotlinNullChecks": false
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a10ce5a0-3e52-4ff0-a9a5-d10f3d53a7f4"
      },
      "opencageApiKey": "164d3314dc4041418021ce63c8095c81"
    }
  }
}
